@using SoftUniSpaceConsoleWebApp.Models.Galaxy;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@model IEnumerable<GalaxyViewModel>


<table class="table">
    <thead>
        <tr>
            <Lable> Galaxy List </Lable>
            <th scope="col">Name</th>
            <th scope="col">Color</th>
            <th scope="col">UniverseGroup</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var galaxy in Model)
        {

            <tr>
                <th>@galaxy.Name</th>

                <th>@galaxy.Color</th>

                <th>@galaxy.UniverseGroup</th>

                <th>
                    <button>
                        <a asp-controller="Galaxy"
                           asp-action="Delete"
                           asp-route-id="@galaxy.Id">
                            Delete?
                        </a>

                    </button>



                </th>

            </tr>

        }

</table>

    </tbody>
</table>



