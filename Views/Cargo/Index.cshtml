@{
}

@model IEnumerable<CargoViewModel>


<table class="table">
    <thead>
        <tr>
            <Lable> Crew List </Lable>
            <th scope="col">Name</th>
            <th scope="col">Type</th>
            <th scope="col">Quantity</th>
     

        </tr>
    </thead>
    <tbody>
        @foreach (var Cargo in Model)
        {

            <tr>
                <th>@Cargo.Name</th>

                <th>@Cargo.Type </th>

                <th>@Cargo.Quantity</th>

                <th>
                    <button>
                        <a asp-controller="Cargo"
                           asp-action="Delete"
                           asp-route-id="@Cargo.Id">
                            Delete?
                        </a>

                    </button>



                </th>

            </tr>

        }

</table>

    </tbody>
</table>