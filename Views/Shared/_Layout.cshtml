<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SoftUniSpaceConsoleWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SoftUniSpaceConsoleWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SoftUniSpaceConsoleWebApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Crew" asp-action="Create">/Create CrewMember/</a> 
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Ship" asp-action="Create">/Create Ship/</a>
                        </li

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Ship" asp-action="Index">/Ship list/</a>
                        </li

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Galaxy" asp-action="Create">/Create Galaxy/</a>
                        </li

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Galaxy" asp-action="Index">/Galaxy List/</a>
                        </li

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Planet" asp-action="Create">/Create Planet/</a>
                        </li

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Planet" asp-action="Index">/Planet List/</a>
                        </li

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="SolarSystem" asp-action="Index">/SolarSystem List/</a>
                        </li

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="SolarSystem" asp-action="Create">/Create SolarSystem/</a>
                        </li

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="SpaceStation" asp-action="Index">/SpaceStation List/</a>
                        </li

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="SpaceStation" asp-action="Index">/Statioono List/</a>
                        </li

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Moon" asp-action="Index">/Mooon List/</a>
                        </li

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Moon" asp-action="Create">/Make moon/</a>
                        </li

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cargo" asp-action="Index">/Cargo list/</a>
                        </li

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cargo" asp-action="Create">/Cargo create/</a>
                        </li


                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Ship" asp-action="Index">Ship</a>
                        </li
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Crew" asp-action="Index">Ship Crew</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SoftUniSpaceConsoleWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
